<main class="container px-4 text-center">
    <h1>Change Account Settings</h1>
    <div class="container">
        <form class="container needs-validation" action={{url}} method="POST" id="infoEditForm">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-lg-6">
                    <label for="firstname" class="row form-label">First name</label>
                    <input type="text" class="col-4 form-control" id="firstname" name="firstname" value={{first_name}}>

                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-lg-6">
                    <label for="lastname" class="row form-label">Last name</label>
                    <input type="text" class="col-4 form-control" id="lastname" name="lastname" value={{last_name}}>
                    <div class="row valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-3"></div>
            </div>

            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-lg-6">
                    <label for="validationCustomUsername" class="row password">Old Password</label>

                    <input type="password" class="col-4 form-control" id="old_password" name="old_password"
                        aria-describedby="inputGroupPrepend">

                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-lg-6">
                    <label for="password_again" class="row form-label">New Password</label>

                    <input type="password" class="form-control" id="password" name="new_password"
                        aria-describedby="inputGroupPrepend">
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-lg-6">
                    <label for="password_again" class="row form-label">New Password Again</label>

                    <input type="password" class="form-control" id="password_again" name="new_password_again"
                        aria-describedby="inputGroupPrepend">
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
                <div class="col-3"></div>
            </div>

            <div class="mt-3 col-12">
                <ul class="errorInfo">
                    {{#if error}}
                    <li>{{error}}</li>
                    {{/if}}
                </ul>
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>

            <div class="mt-3">
                <a href="/user/usercenter">Back to user center</a>
            </div>

        </form>

        <script src="../public/js/changeAccountSettingValidation.js"> </script>
    </div>

</main>