<main class="container px-4 text-center">
    <h1>JOIN US AND SAVE THE WORLD</h1>
    <div class="container">
        <form class="container needs-validation" action="/user/signin" method="POST" id="signInForm">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-md-6">
                    <label for="firstname" class="row form-label">First name</label>
                    <input type="text" class="col-4 form-control" id="firstname" name="firstname">
                    <div class="row valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-md-6">
                    <label for="lastname" class="row form-label">Last name</label>
                    <input type="text" class="col-4 form-control" id="lastname" name="lastname">
                    <div class="row valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-md-6">
                    <label for="account" class="row form-label">Account</label>

                    <input type="text" class="col-4 form-control" id="account" name="account">
                    <div class="row invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-md-6">
                    <label for="password" class="row password">Password</label>

                    <input type="password" class="col-4 form-control" id="password" name="password">
                    <div class="row invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-md-6">
                    <label for="password_again" class="row form-label">Type Your Password Again</label>

                    <input type="password" class="form-control" id="password_again" name="password_again">
                </div>
                <div class="col-3"></div>
            </div>

            <div class="mt-3 col-12">
                <ul class="errorInfo">
                    {{#if error}}
                    <li>{{error}}</li>
                    {{/if}}
                </ul>
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>

            <div class="mt-3">
                <a href="/user/login">Already have account?</a>
            </div>

        </form>
    </div>
    <script src="../public/js/signInValidation.js"></script>
</main>